      <value>
        <ingredients>
	     	  <li>
	     	  	<filter>
              <thingDefs>
                <li>Antimatter</li>
              </thingDefs>
            </filter>
            <count>30</count>
	     	  </li>
	     	  <li>
	     	  	<filter>
              <thingDefs>
                <li>Uranium</li>
              </thingDefs>
            </filter>
            <count>80</count>
	     	  </li>
	     	  <li>
	     	  	<filter>
              <categories>
                <li>HeavyBar</li>
              </categories>
            </filter>
            <count>30</count>
	     	  </li>
        </ingredients>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Save Our Ship 2</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>/Defs/RecipeDef[defName="MakeShuttleFuelPods"]/fixedIngredientFilter</xpath>
      <value>
        <fixedIngredientFilter>
          <thingDefs>
            <li>Antimatter</li>
			    	<li>Uranium</li>
          </thingDefs>
          <categories>
            <li>HeavyBar</li>
          </categories>
        </fixedIngredientFilter>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Save Our Ship 2</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>/Defs/RecipeDef[defName="MakeShuttleFuelPods"]/recipeUsers</xpath>
      <value>
         <recipeUsers>
		       <li>Matterfab</li>
	       </recipeUsers>
      </value>
    </match>
  </Operation>


</Patch>