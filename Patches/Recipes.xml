<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- MakeHullFoam -->

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Save Our Ship 2</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>/Defs/RecipeDef[defName="MakeHullFoam"]/ingredients</xpath>
      <value>
        <ingredients>
	     	  <li>
	     	  	<filter>
              <categories>
                <li>SLDBar</li>
                <li>USLDBar</li>
              </categories>
            </filter>
            <count>3</count>
	     	  </li>
	     	  <li>
	     	  	<filter>
              <thingDefs>
                <li>ComponentIndustrial</li>
              </thingDefs>
            </filter>
            <count>1</count>
	     	  </li>
	     	  <li>
	     	  	<filter>
              <thingDefs>
                <li>Compaste</li>
              </thingDefs>
            </filter>
            <count>5</count>
	     	  </li>
	     	  <li>
	     	  	<filter>
              <thingDefs>
                <li>Ceramics</li>
              </thingDefs>
            </filter>
            <count>5</count>
	     	  </li>
        </ingredients>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Save Our Ship 2</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>/Defs/RecipeDef[defName="MakeHullFoam"]/fixedIngredientFilter</xpath>
      <value>
        <fixedIngredientFilter>
          <thingDefs>
            <li>ComponentIndustrial</li>
			    	<li>Compaste</li>
			    	<li>Ceramics</li>
          </thingDefs>
          <categories>
            <li>SLDBar</li>
            <li>USLDBar</li>
          </categories>
        </fixedIngredientFilter>
      </value>
    </match>
  </Operation>



