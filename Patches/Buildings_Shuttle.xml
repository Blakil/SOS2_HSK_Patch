<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- PersonalShuttle -->

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Save Our Ship 2</li>
    </mods>
    <match Class="PatchOperationReplace">
      <xpath>/Defs/ThingDef[defName="PersonalShuttle"]/costList</xpath>
      <value>
        <costList>
          <Wire>60</Wire>
          <ComponentSpacer>24</ComponentSpacer>
          <ReinforcedGlass>30</ReinforcedGlass>
          <ElectronicComponents>12</ElectronicComponents>
			    <Microchips>3</Microchips>
        </costList>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Save Our Ship 2</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/ThingDef[defName="PersonalShuttle"]</xpath>
      <value>
        <stuffCategories>
          <li>RuggedMetallic</li>
        </stuffCategories>
        <costStuffCount>200</costStuffCount>
      </value>
    </match>
  </Operation>


