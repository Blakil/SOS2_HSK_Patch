<Patch>

<Operation Class="PatchOperationFindMod">
    <mods>
      <li>Save Our Ship 2</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>/Defs</xpath>
      <value>
      	<ArchitectSense.DesignationSubCategoryDef>
          <defName>SubCategory_ShipTurrets</defName>
          <label>Ship Turrets</label>
          <description> Ship Turrets.</description>
          <defNames>
            <li>ShipTurret_ACI</li>
